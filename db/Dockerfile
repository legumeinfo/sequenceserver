FROM ncbi/blast:2.12.0

WORKDIR "/db/Arachis_hypogaea_Genomic_Sequence_Collection"
RUN bash -c 'set -o pipefail -o errexit -o nounset; curl https://data.legumeinfo.org/Arachis/hypogaea/genomes/Fuhuasheng.gnm1.XX5Y/arahy.Fuhuasheng.gnm1.XX5Y.genome_main.fna.gz | gzip -dc| makeblastdb -parse_seqids -out arahy.Fuhuasheng.gnm1 -hash_index -dbtype nucl -title "Arachis hypogaea Fuhuasheng.gnm1.XX5Y Genomes"'
RUN bash -c 'set -o pipefail -o errexit -o nounset; curl https://data.legumeinfo.org/Arachis/hypogaea/genomes/Shitouqi.gnm1.L4VP/arahy.Shitouqi.gnm1.L4VP.genome_main.fna.gz | gzip -dc| makeblastdb -parse_seqids -out arahy.Shitouqi.gnm1 -hash_index -dbtype nucl -title "Arachis hypogaea Shitouqi.gnm1.L4VP Genomes"'
RUN bash -c 'set -o pipefail -o errexit -o nounset; curl https://data.legumeinfo.org/Arachis/hypogaea/genomes/Tifrunner.gnm1.KYV3/arahy.Tifrunner.gnm1.KYV3.genome_main.fna.gz | gzip -dc| makeblastdb -parse_seqids -out arahy.Tifrunner.gnm1 -hash_index -dbtype nucl -title "Arachis hypogaea Tifrunner.gnm1.KYV3 Genomes"'
RUN bash -c 'set -o pipefail -o errexit -o nounset; curl https://data.legumeinfo.org/Arachis/hypogaea/genomes/Tifrunner.gnm2.J5K5/arahy.Tifrunner.gnm2.J5K5.genome_main.fna.gz | gzip -dc| makeblastdb -parse_seqids -out arahy.Tifrunner.gnm2 -hash_index -dbtype nucl -title "Arachis hypogaea Tifrunner.gnm2.J5K5 Genomes"'
RUN bash -c 'set -o pipefail -o errexit -o nounset; curl https://data.legumeinfo.org/Arachis/hypogaea/genomes/BaileyII.gnm1.1JTF/arahy.BaileyII.gnm1.1JTF.genome_main.fna.gz | gzip -dc| makeblastdb -parse_seqids -out arahy.BaileyII.gnm1 -hash_index -dbtype nucl -title "Arachis hypogaea BaileyII Genomes"'
WORKDIR "/db/Arachis_duranensis_Genomic_Sequence_Collection"
RUN bash -c 'set -o pipefail -o errexit -o nounset; curl https://data.legumeinfo.org/Arachis/duranensis/genomes/V14167.gnm1.SWBf/aradu.V14167.gnm1.SWBf.genome_main.fna.gz | gzip -dc| makeblastdb -parse_seqids -out aradu.V14167.gnm1 -hash_index -dbtype nucl -title "Arachis duranensis V14167.gnm1.SWBf Genomes"'
RUN bash -c 'set -o pipefail -o errexit -o nounset; curl https://data.legumeinfo.org/Arachis/duranensis/genomes/V14167.gnm2.J7QH/aradu.V14167.gnm2.J7QH.genome_main.fna.gz | gzip -dc| makeblastdb -parse_seqids -out aradu.V14167.gnm2 -hash_index -dbtype nucl -title "Arachis duranensis V14167.gnm2.J7QH Genomes"'
WORKDIR "/db/Arachis_ipaensis_Genomic_Sequence_Collection"
RUN bash -c 'set -o pipefail -o errexit -o nounset; curl https://data.legumeinfo.org/Arachis/ipaensis/genomes/K30076.gnm1.bXJ8/araip.K30076.gnm1.bXJ8.genome_main.fna.gz | gzip -dc| makeblastdb -parse_seqids -out araip.K30076.gnm1 -hash_index -dbtype nucl -title "Arachis ipaensis K30076.gnm1.bXJ8 Genomes"'
RUN bash -c 'set -o pipefail -o errexit -o nounset; curl https://data.legumeinfo.org/Arachis/ipaensis/genomes/K30076.gnm2.1GWY/araip.K30076.gnm2.1GWY.genome_main.fna.gz | gzip -dc| makeblastdb -parse_seqids -out araip.K30076.gnm2 -hash_index -dbtype nucl -title "Arachis ipaensis K30076.gnm2.1GWY Genomes"'
WORKDIR "/db/Arachis_cardenasii_Genomic_Sequence_Collection"
RUN bash -c 'set -o pipefail -o errexit -o nounset; curl https://data.legumeinfo.org/Arachis/cardenasii/genomes/K10017.gnm1.DQ4M/araca.K10017.gnm1.DQ4M.genome_main.fna.gz | gzip -dc| makeblastdb -parse_seqids -out araca.K10017.gnm1 -hash_index -dbtype nucl -title "Arachis cardenasii K10017.gnm1.DQ4M Genomes"'

WORKDIR "/db/Arachis_hypogaea_Protein_Sequence_Collection"
#throwing error because of ids too long; d-mn full yuuck!
#RUN bash -c 'set -o pipefail -o errexit -o nounset; curl https://data.legumeinfo.org/Arachis/hypogaea/annotations/BaileyII.gnm1.ann1.PQM7/arahy.BaileyII.gnm1.ann1.PQM7.protein_primary.faa.gz | gzip -dc| makeblastdb -parse_seqids -out arahy.BaileyII.gnm1.ann1.protein_primary -hash_index -dbtype prot -title "Arachis hypogaea BaileyII Annotations"'
RUN bash -c 'set -o pipefail -o errexit -o nounset; curl https://data.legumeinfo.org/Arachis/hypogaea/annotations/Tifrunner.gnm1.ann1.CCJH/arahy.Tifrunner.gnm1.ann1.CCJH.protein_primary.faa.gz | gzip -dc| makeblastdb -parse_seqids -out arahy.Tifrunner.gnm1.ann1.protein_primary -hash_index -dbtype prot -title "Arachis hypogaea Tifrunner Tifrunner.gnm1.ann1.CCJH Annotations"'
RUN bash -c 'set -o pipefail -o errexit -o nounset; curl https://data.legumeinfo.org/Arachis/hypogaea/annotations/Tifrunner.gnm2.ann1.4K0L/arahy.Tifrunner.gnm2.ann1.4K0L.protein_primary.faa.gz | gzip -dc| makeblastdb -parse_seqids -out arahy.Tifrunner.gnm2.ann1.protein_primary -hash_index -dbtype prot -title "Arachis hypogaea Tifrunner Tifrunner.gnm2.ann1.4K0L Annotations"'
RUN bash -c 'set -o pipefail -o errexit -o nounset; curl https://data.legumeinfo.org/Arachis/hypogaea/annotations/Tifrunner.gnm2.ann2.PVFB/arahy.Tifrunner.gnm2.ann2.PVFB.protein.faa.gz | gzip -dc| makeblastdb -parse_seqids -out arahy.Tifrunner.gnm2.ann2.protein -hash_index -dbtype prot -title "Arachis hypogaea Tifrunner Tifrunner.gnm2.ann2.PVFB Annotations"'
VOLUME ["/db"]
